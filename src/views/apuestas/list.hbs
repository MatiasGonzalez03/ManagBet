<form action="/apuestas" method="GET">
    <div class="form-group">
        <label for="estado" style="color: white;">Filtrar por estado:</label>
        <select class="form-control" id="estado" name="estado">
            <option value="">Todos</option>
            <option value="Pendiente">Pendiente</option>
            <option value="Acertada">Acertada</option>
            <option value="Fallada">Fallada</option>
        </select>
    </div>
    <div class="form-group">
        <label for="pais" style="color: white;">Filtrar por pa√≠s:</label>
        <select class="form-control" id="pais" name="pais">
            <option value="">Todos</option>
            <option value="Argentina">Argentina</option>
        </select>
    </div>
      <div class="form-group">
        <label for="partido" style="color: white;">Buscar por partido:</label>
        <input type="text" class="form-control" id="partido" name="partido" placeholder="Nombre del partido">
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>


<div class="form-group">
            <div class="btn">
                <a href="/apuestas/add">Crear Apuesta</a>
            </div>
</div>

<div class="container p-4">
    <div class="row">
        {{#each apuestas}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title" >
                        {{partido}}
                    </h3>
                    <p class="m-2">Estado: {{estado}}</p>
                    <p class="m-2">Pronostico: {{pronostico}}</p>
                    <p class="m-2">Cuota: {{cuota}}</p>
                    <p class="m-2"> {{timeago created_at}}</p>
                    <a class="btn" href="/apuestas/delete/{{id}}">
                        Borrar
                    </a>
                    <a class="btn light" href="/apuestas/edit/{{id}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
          {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay ninguna apuesta creada aun.</p>
                <a href="/apuestas/add">Crear una</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>