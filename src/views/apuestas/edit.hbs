<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/apuestas/edit/{{apuestas.id}}" method="POST">
                        <div class="form-group">
                            <input type="number" value="{{ apuestas.dinero }}" name="dinero" class="form-control" placeholder="Dinero apostado">
                        </div>
                        <div class="form-group">
                            <input type="number " step="01" value="{{ apuestas.cuota }}" name="cuota" class="form-control" placeholder="Cuota">
                        </div>
                        <select class="form-control" name="estado">
                                <option>{{ apuestas.estado }}</option>
                                <option>Pendiente</option>
                                <option>Acertada</option>
                                <option>Fallada</option>
                            </select>
                        <div class="form-group">
                            <input type="number" value="{{ apuestas.stake }}" name="stake" class="form-control" placeholder="Stake">
                        </div>
                        <div class="form-group">
                            <input type="text"  value="{{ apuestas.pais }}" name="pais" class="form-control" placeholder="Pais">
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="competicion">
                                <option>{{ apuestas.competicion }}</option>
                                <option value="Liga Profesional Argentina">Liga Profesional Argentina</option>
                                <option value="Copa de la Liga Profesional">Copa de la Liga Profesional</option>
                                <option value="Copa Argentina">Copa Argentina</option>
                                <option value="Libertadores">Libertadores</option>
                                <option value="Serie A Brasil">Serie A Brasil</option>
                                <option value="Serie A Italia">Serie A Italia</option>
                                <option value="La Liga">La Liga</option>
                                <option value="Champions League">Champions League</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{ apuestas.partido }}" name="partido" class="form-control" placeholder="Partido">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{ apuestas.pronostico }}" name="pronostico" class="form-control" placeholder="Pronostico">
                        </div>
                        <div class="form-group">
                            <button class="btn">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>